{
  "name": "@folio/myprofile",
  "version": "7.0.0",
  "description": "My profile",
  "repository": "folio-org/ui-myprofile",
  "publishConfig": {
    "registry": "https://repository.folio.org/repository/npm-folio/"
  },
  "license": "Apache-2.0",
  "engines": {
    "node": ">=14.0.0"
  },
  "stripes": {
    "actsAs": [
      "settings"
    ],
    "displayName": "ui-myprofile.meta.title",
    "route": "/myprofile",
    "permissionSets": [
      {
        "permissionName": "module.myprofile.enabled",
        "displayName": "UI: My-profile module is enabled"
      },
      {
        "permissionName": "settings.myprofile.enabled",
        "displayName": "Settings (My profile): display list of settings pages",
        "subPermissions": [
          "settings.enabled"
        ]
      },
      {
        "permissionName": "ui-myprofile.settings.change-password",
        "displayName": "Settings (My profile): Can change your local password",
        "description": "Some subperms can be deleted later when submodules use modern permission names",
        "subPermissions": [
          "settings.myprofile.enabled",
          "users.collection.get",
          "users-bl.item.get",
          "users.item.get"
        ],
        "visible": true
      }
    ],
    "links": {
      "userDropdown": [
        {
          "caption": "ui-myprofile.userDropdown.changePassword.caption",
          "route": "/settings/myprofile/password",
          "check": "isLocalLogin"
        }
      ]
    }
  },
  "scripts": {
    "start": "stripes serve",
    "lint": "eslint .",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "build-mod-descriptor": "stripes mod descriptor --full --strict | jq '.[]' > module-descriptor.json ",
    "formatjs-compile": "formatjs compile-folder --ast --format simple ./translations/ui-myprofile ./translations/ui-myprofile/compiled"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-decorators": "^7.13.5",
    "@babel/plugin-transform-runtime": "^7.13.7",
    "@babel/preset-react": "^7.16.7",
    "@folio/eslint-config-stripes": "^6.1.0",
    "@folio/stripes": "^7.1.0",
    "@folio/stripes-cli": "^2.4.0",
    "@folio/stripes-core": "^8.0.0",
    "@formatjs/cli": "^4.2.7",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "babel-jest": "^26.6.3",
    "babel-plugin-module-resolver": "^4.1.0",
    "core-js": "^3.6.4",
    "eslint": "^7.32.0",
    "eslint-plugin-jest": "^24.1.5",
    "identity-obj-proxy": "^3.0.0",
    "inflected": "^2.0.4",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "jquery": "^3.3.1",
    "mocha": "^5.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-intl": "^5.8.0",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.0.0",
    "react-trigger-change": "^1.0.2",
    "redux": "^4.0.0",
    "regenerator-runtime": "^0.13.3",
    "webpack": "^4.10.2"
  },
  "dependencies": {
    "prop-types": "^15.6.0",
    "redux-form": "^8.3.7"
  },
  "peerDependencies": {
    "@folio/stripes": "^7.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-intl": "^5.8.0",
    "react-router-dom": "^5.0.0"
  }
}
