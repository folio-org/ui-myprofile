{
  "name": "@folio/myprofile",
  "version": "1.5.0",
  "description": "My profile",
  "repository": "folio-org/ui-myprofile",
  "publishConfig": {
    "registry": "https://repository.folio.org/repository/npm-folio/"
  },
  "license": "Apache-2.0",
  "engines": {
    "node": ">=6.0.0"
  },
  "stripes": {
    "type": "settings",
    "displayName": "ui-myprofile.meta.title",
    "route": "/myprofile",
    "permissionSets": [
      {
        "permissionName": "module.myprofile.enabled",
        "displayName": "UI: Users profile module is enabled"
      },
      {
        "permissionName": "settings.myprofile.enabled",
        "displayName": "Settings (Users profile): display list of settings pages",
        "subPermissions": [
          "settings.enabled"
        ],
        "visible": true
      },
      {
        "permissionName": "ui-myprofile.view",
        "displayName": "My profile: Can change your local password",
        "description": "Some subperms can be deleted later when submodules use modern permission names",
        "subPermissions": [
          "settings.myprofile.enabled",
          "validation.rules.collection.get",
          "users.collection.get",
          "users-bl.item.get",
          "users.item.get",
          "login.item.get"
        ],
        "visible": true
      }
    ],
    "links": {
      "userDropdown": [
        {
          "caption": "ui-myprofile.userDropdown.changePassword.caption",
          "route": "/settings/myprofile/password",
          "check": "isLocalLogin"
        }
      ]
    }
  },
  "scripts": {
    "start": "stripes serve",
    "lint": "eslint .",
    "test": "stripes test karma",
    "test-coverage": "stripes test karma --coverage"
  },
  "devDependencies": {
    "@bigtest/convergence": "^0.10.0",
    "@bigtest/interactor": "^0.7.2",
    "@bigtest/mirage": "^0.0.1",
    "@bigtest/mocha": "^0.5.0",
    "@bigtest/react": "^0.1.2",
    "@folio/eslint-config-stripes": "^3.2.0",
    "@folio/stripes": "^2.0.0",
    "@folio/stripes-cli": "^1.4.0",
    "@folio/stripes-core": "^3.0.1",
    "babel-eslint": "^9.0.0",
    "babel-polyfill": "^6.26.0",
    "chai": "^4.0.2",
    "chai-jquery": "^2.0.0",
    "eslint": "^5.5.0",
    "jquery": "^3.3.1",
    "mocha": "^5.2.0",
    "react": "^16.5.0",
    "react-dom": "^16.5.0",
    "react-redux": "^5.0.7",
    "react-trigger-change": "^1.0.2",
    "redux": "^4.0.0",
    "sinon": "^6.3.4",
    "webpack": "^4.10.2"
  },
  "dependencies": {
    "@folio/react-intl-safe-html": "^1.0.1",
    "prop-types": "^15.6.0",
    "react-intl": "^2.3.0",
    "react-router-dom": "^4.1.1",
    "redux-form": "^7.0.3"
  },
  "peerDependencies": {
    "@folio/stripes": "^2.0.0",
    "react": "*"
  }
}
